{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ReadmissionDomainSummary_SGRv2_StrictObjectiveKeys_CascadeEvidence",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "DEMOGRAPHICS",
    "VITALS",
    "LABS",
    "PROBLEMS",
    "SYMPTOMS",
    "MEDICATIONS",
    "PROCEDURES",
    "UTILIZATION",
    "DISPOSITION"
  ],
  "properties": {
    "DEMOGRAPHICS": {
      "type": "object",
      "additionalProperties": false,
      "required": ["sex", "age"],
      "properties": {
        "sex": { "type": "string", "enum": ["male", "female", "not stated"] },
        "age": { "type": "string", "pattern": "^(not stated|[0-9]{1,3})$" },
        "evidence_line": {
          "type": "string",
          "maxLength": 240,
          "description": "Optional verbatim excerpt line supporting DEMOGRAPHICS (e.g., age/sex). Use not stated if none."
        }
      }
    },
    "VITALS": {
      "type": "object",
      "additionalProperties": false,
      "required": ["evidence_line1", "evidence_line2", "evidence_line3", "admission", "discharge"],
      "properties": {
        "evidence_line1": { "type": "string", "maxLength": 240 },
        "evidence_line2": { "type": "string", "maxLength": 240 },
        "evidence_line3": { "type": "string", "maxLength": 240 },
        "admission": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "heart_rate",
            "systolic_bp",
            "diastolic_bp",
            "respiratory_rate",
            "temperature",
            "spo2",
            "weight"
          ],
          "properties": {
            "heart_rate": { "type": "string", "pattern": "^(not stated|[0-9]+(\\.[0-9]+)?)$" },
            "systolic_bp": { "type": "string", "pattern": "^(not stated|[0-9]+(\\.[0-9]+)?)$" },
            "diastolic_bp": { "type": "string", "pattern": "^(not stated|[0-9]+(\\.[0-9]+)?)$" },
            "respiratory_rate": { "type": "string", "pattern": "^(not stated|[0-9]+(\\.[0-9]+)?)$" },
            "temperature": { "type": "string", "pattern": "^(not stated|[0-9]+(\\.[0-9]+)?)$" },
            "spo2": { "type": "string", "pattern": "^(not stated|[0-9]+(\\.[0-9]+)?)$" },
            "weight": { "type": "string", "pattern": "^(not stated|[0-9]+(\\.[0-9]+)?)$" }
          }
        },
        "discharge": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "heart_rate",
            "systolic_bp",
            "diastolic_bp",
            "respiratory_rate",
            "temperature",
            "spo2",
            "weight"
          ],
          "properties": {
            "heart_rate": { "type": "string", "pattern": "^(not stated|[0-9]+(\\.[0-9]+)?)$" },
            "systolic_bp": { "type": "string", "pattern": "^(not stated|[0-9]+(\\.[0-9]+)?)$" },
            "diastolic_bp": { "type": "string", "pattern": "^(not stated|[0-9]+(\\.[0-9]+)?)$" },
            "respiratory_rate": { "type": "string", "pattern": "^(not stated|[0-9]+(\\.[0-9]+)?)$" },
            "temperature": { "type": "string", "pattern": "^(not stated|[0-9]+(\\.[0-9]+)?)$" },
            "spo2": { "type": "string", "pattern": "^(not stated|[0-9]+(\\.[0-9]+)?)$" },
            "weight": { "type": "string", "pattern": "^(not stated|[0-9]+(\\.[0-9]+)?)$" }
          }
        }
      }
    },
    "LABS": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "evidence_line1",
        "evidence_line2",
        "evidence_line3",
        "evidence_line4",
        "evidence_line5",
        "evidence_line6",
        "admission",
        "discharge"
      ],
      "properties": {
        "evidence_line1": { "type": "string", "maxLength": 240 },
        "evidence_line2": { "type": "string", "maxLength": 240 },
        "evidence_line3": { "type": "string", "maxLength": 240 },
        "evidence_line4": { "type": "string", "maxLength": 240 },
        "evidence_line5": { "type": "string", "maxLength": 240 },
        "evidence_line6": { "type": "string", "maxLength": 240 },
        "admission": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "hemoglobin",
            "hematocrit",
            "wbc",
            "platelet",
            "sodium",
            "potassium",
            "creatinine",
            "bun",
            "glucose",
            "bicarbonate"
          ],
          "properties": {
            "hemoglobin": { "type": "string", "pattern": "^(not stated|[0-9]+(\\.[0-9]+)?)$" },
            "hematocrit": { "type": "string", "pattern": "^(not stated|[0-9]+(\\.[0-9]+)?)$" },
            "wbc": { "type": "string", "pattern": "^(not stated|[0-9]+(\\.[0-9]+)?)$" },
            "platelet": { "type": "string", "pattern": "^(not stated|[0-9]+(\\.[0-9]+)?)$" },
            "sodium": { "type": "string", "pattern": "^(not stated|[0-9]+(\\.[0-9]+)?)$" },
            "potassium": { "type": "string", "pattern": "^(not stated|[0-9]+(\\.[0-9]+)?)$" },
            "creatinine": { "type": "string", "pattern": "^(not stated|[0-9]+(\\.[0-9]+)?)$" },
            "bun": { "type": "string", "pattern": "^(not stated|[0-9]+(\\.[0-9]+)?)$" },
            "glucose": { "type": "string", "pattern": "^(not stated|[0-9]+(\\.[0-9]+)?)$" },
            "bicarbonate": { "type": "string", "pattern": "^(not stated|[0-9]+(\\.[0-9]+)?)$" }
          }
        },
        "discharge": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "hemoglobin",
            "hematocrit",
            "wbc",
            "platelet",
            "sodium",
            "potassium",
            "creatinine",
            "bun",
            "glucose",
            "bicarbonate"
          ],
          "properties": {
            "hemoglobin": { "type": "string", "pattern": "^(not stated|[0-9]+(\\.[0-9]+)?)$" },
            "hematocrit": { "type": "string", "pattern": "^(not stated|[0-9]+(\\.[0-9]+)?)$" },
            "wbc": { "type": "string", "pattern": "^(not stated|[0-9]+(\\.[0-9]+)?)$" },
            "platelet": { "type": "string", "pattern": "^(not stated|[0-9]+(\\.[0-9]+)?)$" },
            "sodium": { "type": "string", "pattern": "^(not stated|[0-9]+(\\.[0-9]+)?)$" },
            "potassium": { "type": "string", "pattern": "^(not stated|[0-9]+(\\.[0-9]+)?)$" },
            "creatinine": { "type": "string", "pattern": "^(not stated|[0-9]+(\\.[0-9]+)?)$" },
            "bun": { "type": "string", "pattern": "^(not stated|[0-9]+(\\.[0-9]+)?)$" },
            "glucose": { "type": "string", "pattern": "^(not stated|[0-9]+(\\.[0-9]+)?)$" },
            "bicarbonate": { "type": "string", "pattern": "^(not stated|[0-9]+(\\.[0-9]+)?)$" }
          }
        }
      }
    },
    "PROBLEMS": {
      "type": "object",
      "additionalProperties": false,
      "required": ["pmh_comorbidities", "discharge_dx", "complications", "working_dx"],
      "properties": {
        "pmh_comorbidities": { "type": "array", "maxItems": 10, "items": { "type": "string", "minLength": 2, "maxLength": 80 } },
        "discharge_dx": { "type": "array", "maxItems": 10, "items": { "type": "string", "minLength": 2, "maxLength": 80 } },
        "complications": { "type": "array", "maxItems": 8, "items": { "type": "string", "minLength": 2, "maxLength": 80 } },
        "working_dx": { "type": "array", "maxItems": 8, "items": { "type": "string", "minLength": 2, "maxLength": 80 } }
      }
    },
    "SYMPTOMS": {
      "type": "object",
      "additionalProperties": false,
      "required": ["admission", "discharge"],
      "properties": {
        "admission": { "type": "array", "maxItems": 3, "items": { "type": "string", "minLength": 2, "maxLength": 80 } },
        "discharge": { "type": "array", "maxItems": 1, "items": { "type": "string", "minLength": 2, "maxLength": 80 } }
      }
    },
    "MEDICATIONS": {
      "type": "string",
      "maxLength": 420,
      "description": "Integral flags/counts only (Medication Count/New Medications Count/Polypharmacy/Anticoagulation/Insulin Therapy/Opioid Therapy/Diuretic Therapy). Do not list medication names."
    },
    "PROCEDURES": {
      "type": "string",
      "maxLength": 520,
      "description": "Integral keys only (no imaging/test inventory): Any Procedure, Surgery, Dialysis, Mechanical Ventilation. Use yes/no for Any Procedure and Surgery; Dialysis in {decided, started, done, cancelled, no}; Mechanical Ventilation numeric days or no. Use 'not stated' if absent."
    },
    "UTILIZATION": {
      "type": "string",
      "maxLength": 520,
      "description": "Key=Value lines. Prior Admissions 12mo/ED Visits 6mo/Days Since Last Admission/Current Length of Stay. Numeric only. Use 'not stated' if absent."
    },
    "DISPOSITION": {
      "type": "string",
      "maxLength": 420,
      "description": "Key=Value lines. Discharge Disposition (Home/Home with Services/SNF/Rehab/LTAC/Hospice/AMA), Mental Status (alert/confused/oriented/lethargic), Support Needs. Use 'not stated' if absent."
    }
  }
}
